{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build UI",
            "type": "shell",
            "command": "build_ui.bat",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        },
        {
            "label": "Build Resources",
            "type": "shell",
            "command": "build_resources.bat",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "new"
            }
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "build_ui.bat && build_resources.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        }
    ]
}